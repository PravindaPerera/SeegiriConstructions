                <!-- JavaScript validation for the SignUp form-->
        <script type="text/javascript">

            function checkForm(form)
            {
                if (form.u_name.value == "") {
                    alert("Error: Username cannot be blank!");
                    form.u_name.focus();
                    return false;
                }
                re = /^\w+$/;
                if (!re.test(form.u_name.value)) {
                    alert("Error: Username must contain only letters, numbers and underscores!");
                    form.u_name.focus();
                    return false;
                }

                if (form.contact_num.value.length != 10) {
                    alert("Error: Phone number must contain exactly 10 digits!!");
                    form.pass.focus();
                    return false;
                }
                re = /[a-z]/;
                if (re.test(form.contact_num.value)) {
                    alert("Error: phone number should only contain numbers!!");
                    form.pass.focus();
                    return false;
                }
                re = /[A-Z]/;
                if (re.test(form.contact_num.value)) {
                    alert("Error: phone number should only contain numbers!!");
                    form.pass.focus();
                    return false;
                }

                if (form.pass.value != "" && form.pass.value == form.re_pass.value) {
                    if (form.pass.value.length < 6) {
                        alert("Error: Password must contain at least six characters!");
                        form.pass.focus();
                        return false;
                    }
                    if (form.pass.value == form.u_name.value) {
                        alert("Error: Password must be different from Username!");
                        form.pass.focus();
                        return false;
                    }
                    re = /[0-9]/;
                    if (!re.test(form.pass.value)) {
                        alert("Error: password must contain at least one number (0-9)!");
                        form.pass.focus();
                        return false;
                    }
                    re = /[a-z]/;
                    if (!re.test(form.pass.value)) {
                        alert("Error: password must contain at least one lowercase letter (a-z)!");
                        form.pass.focus();
                        return false;
                    }
                    re = /[A-Z]/;
                    if (!re.test(form.pass.value)) {
                        alert("Error: password must contain at least one uppercase letter (A-Z)!");
                        form.pass.focus();
                        return false;
                    }
                } else {
                    alert("Error: Please check that you've entered and confirmed your password correctly!");
                    form.pass.focus();
                    return false;
                }

                //alert("You entered a valid password: " + form.pass.value);
                return true;
            }
            ;

